<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_padding"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/typeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_unknown" 
        android:contentDescription="@string/type_image"/>

    <TextView
        android:id="@+id/typeNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/typeImageView"
        android:text="@string/unknown_type"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/starImageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/typeImageView"
        android:layout_alignLeft="@+id/typeNameText"
        android:src="@drawable/star_grey" 
        android:contentDescription="@string/star"/>

    <ImageView
        android:id="@+id/starImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/starImageView1"
        android:layout_toRightOf="@+id/starImageView1"
        android:src="@drawable/star_grey" 
        android:contentDescription="@string/star"/>

    <ImageView
        android:id="@+id/starImageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/starImageView2"
        android:layout_toRightOf="@+id/starImageView2"
        android:src="@drawable/star_grey" 
        android:contentDescription="@string/star"/>

    <ImageView
        android:id="@+id/starImageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/starImageView3"
        android:layout_toRightOf="@+id/starImageView3"
        android:src="@drawable/star_grey" 
        android:contentDescription="@string/star"/>

    <ImageView
        android:id="@+id/starImageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/starImageView4"
        android:layout_toRightOf="@+id/starImageView4"
        android:src="@drawable/star_grey" 
        android:contentDescription="@string/star"/>

    <TextView
        android:id="@+id/distanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/distance"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
